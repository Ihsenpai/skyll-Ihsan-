# Skyll K6 Testing Environment - MySQL Testing Database
# Copy from your main .env and modify these database settings

APP_NAME="Skyll K6 Testing"
APP_ENV=testing
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# MySQL Testing Database (Separate from production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=skyll_testing
DB_USERNAME=root
DB_PASSWORD=

# Disable external services for testing
MAIL_MAILER=log
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
CACHE_STORE=array

# Optimized for load testing
LOG_LEVEL=error
LOG_CHANNELS=single

# Keep other settings from your main .env
# Just copy them over...